generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  tasks     Task[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(pending)
  createdAt   DateTime @default(now())
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
}

enum TaskStatus {
  pending
  in_progress
  done
}
